<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <%= @day.name %>
                <span style="float:right;font-size:.5em;">
                    <%= link_to "<i class='fa fa-file-o'></i> New Exercise".html_safe, new_exercise_path %>
                </span>
            </h1>
        </div>
    </div>
    <!-- /.row -->

	<div class="form-container">
		<div class="form-group">
			<% @day.exercises.each do |exercise| %>
			<div style="float:left;max-width:500px;">
				<span style="float:left;font-size:1.5em;">
    				<%= link_to "Log Set <i class='fa fa-plus'></i>".html_safe, new_exercise_set_path(exercise), style: "color:white;margin-right:10px;" %>
					<%= link_to "<i class='fa fa-pencil-square-o'></i>".html_safe, edit_exercise_path(exercise) %>
					<%= link_to "<i class='fa fa-times'></i>".html_safe, exercise_path(exercise), method: 'delete', data: {confirm: "Are you sure?"} %>
				</span>
				<span style="float:right;font-size:1.5em;"> <%= exercise.name %></span>
			</div>
			<br />
			<br />
			<% end %>
		</div>
	</div>
</div>
