<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Overview
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <% @days.each do |day| %>
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header"><%= day.name %></h2>
            <div class="row">
                <% day.exercises.each do |exercise| %>
                <div class="col-lg-4">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> <%= exercise.name %></h3>
                        </div>
                        <div class="panel-body">
                            <div id="morris-line-chart-<%= exercise.id %>" style="height:250px;"></div>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
    <!-- /.row -->

</div>
<!-- /.container-fluid -->
